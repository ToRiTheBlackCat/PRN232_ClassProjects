@model IEnumerable<BusinessObjects.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2 class="mb-4">Product List</h2>

<p>
    <a class="btn btn-primary mb-4" asp-action="Create">Create New</a>
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 text-center shadow-sm">
                    <div class="card-header bg-success py-2"></div>
                    <img src="https://via.placeholder.com/200x150" alt="Product Image" class="card-img-top p-3" style="height: 200px; object-fit: contain;">

                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.ProductName</h5>
                        <p class="text-primary fs-5 fw-bold">@item.UnitPrice?.ToString("0.00") VND</p>

                        <div>
                            <span class="text-warning">★★★★★</span>
                            <span class="text-muted">1000 purchases</span>
                        </div>

                        <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-success w-100 mb-2">View Detail</a>
                        <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-purple w-100">Edit Product</a>
                    </div>

                    @* <div class="card-footer bg-transparent">
                        <a  class="btn btn-sm btn-outline-primary me-1">Edit</a>
                        <a  class="btn btn-sm btn-outline-info me-1">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-sm btn-outline-danger">Delete</a>
                    </div> *@
                </div>
            </div>
        }
    </div>
</div>

<style>
    .btn-purple {
        background-color: #4B0082;
        color: white;
    }

        .btn-purple:hover {
            background-color: #5e22a3;
        }
</style>
