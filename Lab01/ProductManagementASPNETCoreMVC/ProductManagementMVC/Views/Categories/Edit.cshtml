@model BusinessObjects.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm rounded-4">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Profile</h4>
                </div>

                <div class="card-body">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">@ViewBag.Message</div>
                    }

                    @using (Html.BeginForm("Edit"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.CategoryId)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="mb-3">
                            @Html.LabelFor(m => m.CategoryId, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.CategoryId, new { @class = "form-control", placeholder = "Enter Id", disabled = true })
                            @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.CategoryName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", placeholder = "Enter name" })
                            @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                        <hr />
                        <div class="d-grid">
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                        <hr />
                        <div class="d-grid">
                            <a asp-action="Delete" asp-route-id="@Model.CategoryId" class="btn btn-danger">Delete Category</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
