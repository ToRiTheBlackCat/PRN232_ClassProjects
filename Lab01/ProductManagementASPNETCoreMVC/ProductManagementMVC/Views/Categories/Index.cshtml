@model IEnumerable<BusinessObjects.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Category List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container mt-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Categories Information</h4>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
@if (!Model.Any())
{
                    <tr>
                        <td colspan="6" class="text-center text-muted">No categories found.</td>
                    </tr>
}
else
{
    foreach (var item in Model)
    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td class="text-end">
                            <a href="@Url.Action("Edit", new { id = item.CategoryId })" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a href="@Url.Action("Delete", new { id = item.CategoryId })" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
    }
}
                </tbody>
            </table>
        </div>
    </div>
</div>
