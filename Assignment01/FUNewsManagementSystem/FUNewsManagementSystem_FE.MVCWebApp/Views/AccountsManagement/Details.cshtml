@model FUNewsManagementSystem_FE.MVCWebApp.Models.FormModels.SystemAccountView

@{
    ViewData["Title"] = "Details";
}

@if (TempData["DeleteError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["DeleteError"]
    </div>
}

<h1>Details</h1>

<div>
    <h4>SystemAccount</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountEmail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountEmail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountRole)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountRole)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccountPassword)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccountPassword)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AccountId" class="btn btn-primary">Edit</a>

    <form asp-action="Delete" onclick="return confirm('Are you sure you want to delete this?')">
        <input type="hidden" asp-for="AccountId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
    <a asp-action="Index">Back to List</a>
</div>
