@page "{id}"
@model FUNewsManagementSystem_FE.RazorPageWebApp.Pages.NewsArticles.DeleteModel
@{
}
<h2>Confirm Delete</h2>

<p>Are you sure you want to delete: <strong>@Model.Article.NewsTitle</strong>?</p>

<form method="post" onsubmit="return confirmUpdate()">
    <input type="hidden" asp-for="Article.NewsArticleId" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a href="/NewsArticles/Index" class="btn btn-secondary">Cancel</a>
    <a class="btn btn-secondary" href="/NewsArticles/Index">Back</a>
</form>

<script>
    function confirmUpdate() {
        return confirm("Are you sure you want to update this article?");
    }
</script>
