@page "{id}"
@model FUNewsManagementSystem_FE.RazorPageWebApp.Pages.NewsArticles.EditModel
@{
}
<h2>Edit Article</h2>

<form method="post" onsubmit="return confirmUpdate()">
    <input type="hidden" asp-for="Article.NewsArticleId" />
    <div class="mb-3">
        <label>Title</label>
        <input asp-for="Article.NewsTitle" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Content</label>
        <textarea asp-for="Article.NewsContent" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label>Headline</label>
        <input asp-for="Article.Headline" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Source</label>
        <input asp-for="Article.NewsSource" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a class="btn btn-secondary" href="/NewsArticles/Index">Back</a>
</form>

<script>
    function confirmUpdate() {
        return confirm("Are you sure you want to update this article?");
    }
</script>
