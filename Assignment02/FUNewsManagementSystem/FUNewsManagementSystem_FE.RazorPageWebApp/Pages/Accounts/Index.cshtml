@page
@model FUNewsManagementSystem_FE.RazorPageWebApp.Pages.Accounts.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-action="Index">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="control-label">Account Name</label>
                <input type="text" id="accName" name="accName" class="form-control" />
                @* <span asp-validation-for="HolderName" class="text-danger"></span> *@
            </div>
        </div>
        <div class="col-md-3 mt-4">
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SystemAccounts[0].AccountName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemAccounts[0].AccountEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemAccounts[0].AccountRole)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemAccounts[0].AccountPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SystemAccounts) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountRole)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountPassword)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AccountId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AccountId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AccountId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
